{
    "name": "Timestamped New File/Folder",
    "displayName": "Timestamped New File/Folder",
    "description": "Adds timestamp to new file/folder names in specified folders.",
    "version": "1.0.0",
    "publisher": "your-publisher-name",
    "activationEvents": [
      "workspaceContains:**/" 
    ],
    "contributes": {
      "commands": [
        {
          "command": "timestamped-new-file-folder.createNew",
          "title": "New File/Folder with Timestamp"
        }
      ],
      "configuration": {
        "title": "Timestamped New File/Folder",
        "properties": {
          "timestamped-new-file-folder.targetFolders": {
            "type": "array",
            "default": [],
            "description": "Array of folder paths (relative to workspace root) to apply timestamped naming."
          },
          "timestamped-new-file-folder.timestampFormat": {
            "type": "string",
            "default": "YYYYMMDD_HHmmss",
            "description": "Timestamp format using Moment.js tokens."
          }
        }
      }
    },
    "main": "./extension.js"
  }
  